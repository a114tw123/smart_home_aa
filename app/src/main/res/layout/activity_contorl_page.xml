<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".contorl_page">

    <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pc"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_fan"
            app:layout_constraintBottom_toTopOf="@+id/tv_ac" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp">

    </com.github.mikephil.charting.charts.PieChart>
    <include layout="@layout/bot_bt"
             app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintVertical_bias="1.0"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/include" android:layout_height="wrap_content" android:layout_width="0dp"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/bt_fan_sw"
            app:layout_constraintHorizontal_bias="0.5"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="@drawable/fan_a"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/gd70" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/sb" app:layout_constraintEnd_toStartOf="@+id/gd70"/>
    <Button
            android:layout_width="75dp"
            android:id="@+id/bt_ac_sw" android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="@+id/gd30"
            app:layout_constraintEnd_toStartOf="@+id/gd30"
            app:layout_constraintBottom_toTopOf="@+id/include"
            android:background="@drawable/ac_off"
            app:layout_constraintTop_toBottomOf="@+id/tv_ac"/>
    <SeekBar
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:max="9"
            android:progress="3"
            android:id="@+id/sb"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/pc" app:layout_constraintBottom_toBottomOf="@+id/pc"
            app:layout_constraintStart_toStartOf="@+id/gd70" app:layout_constraintVertical_bias="0.6"
            app:layout_constraintEnd_toStartOf="@+id/gd70"/>
    <TextView
            android:text="溫度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_temp" app:layout_constraintEnd_toStartOf="@+id/gd70"
            app:layout_constraintTop_toBottomOf="@+id/bt_ac_up" app:layout_constraintStart_toStartOf="@+id/gd70"
            app:layout_constraintBottom_toTopOf="@+id/bt_ac_down"
            android:textSize="24sp" android:textColor="@color/dark_gray"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:id="@+id/bt_ac_up" app:layout_constraintEnd_toStartOf="@+id/gd70"
            app:layout_constraintStart_toStartOf="@+id/gd70" app:layout_constraintTop_toTopOf="@+id/bt_ac_sw"
            android:background="@drawable/up_h"/>
    <Button
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:id="@+id/bt_ac_down" app:layout_constraintEnd_toStartOf="@+id/gd70"
            app:layout_constraintStart_toStartOf="@+id/gd70"
            app:layout_constraintBottom_toBottomOf="@+id/bt_ac_sw" android:background="@drawable/down_h"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/gd30"
                                          android:orientation="vertical" app:layout_constraintGuide_percent=".3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/gd70"
                                          android:orientation="vertical" app:layout_constraintGuide_percent=".7"/>
    <TextView
            android:text="空氣清淨機控制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fan" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="18sp"/>
    <TextView
            android:text="冷氣控制"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ac" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/include"
            app:layout_constraintVertical_bias=".6"/>
    <TextView
            android:text="@string/fan_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fan_val"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:gravity="center" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/sb"
            app:layout_constraintStart_toStartOf="@+id/gd70" app:layout_constraintEnd_toStartOf="@+id/gd70"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_percent=".5"/>
</android.support.constraint.ConstraintLayout>